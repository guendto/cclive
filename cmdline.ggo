
option "version"
    v "Print version and exit"
    optional
option "license"
    - "Print license and exit"
    optional
option "hosts"
    - "List supported hosts"
    optional
option "background"
    b "Go to background immediately after startup"
    optional

section "Output"
option "emit-csv"
    - "Print video details in csv format to stdout"
    optional
option "quiet"
    q "Turn off all output"
    flag off
option "debug"
    - "Turn on libcurl verbose mode"
    flag off
option "print-fname"
    - "Print filename before each download starts"
    flag off
option "logfile"
    o "Write output to file while in background"
    string typestr="<file>"
    default="cclive.log"
    dependon="background"
    optional
option "logfile-interval"
    i "Update logfile every n seconds while in background"
    int typestr="<n>"
    default="10"
    dependon="background"
    optional

section "HTTP"
option "agent"
    - "Identify cclive as agent string to servers"
    string typestr="<agent_string>"
    default="Mozilla/5.0"
    optional
option "proxy"
    - "Use specified proxy"
    string typestr="proxyhost[:port]"
    optional
option "no-proxy"
    - "Do not use proxy even if http_proxy is defined"
    optional
option "connect-timeout"
    - "Max time allowed connection to server take"
    int typestr="<seconds>"
    default="30"
    optional
option "connect-timeout-socks"
    - "Same but works around 'SOCKS proxy connect timeout' bug in libcurl"
    int typestr="<seconds>"
    default="30"
    optional
option "retry"
    t "Number of retries"
    int typestr="<number>"
    default="5"
    optional
option "retry-wait"
    - "wait 5 seconds between retries"
    int typestr="<seconds>"
    default="5"
    optional

section "Download"
option "output-video"
    O "Write video to file"
    string typestr="<file>"
    optional
option "continue"
    c "Resume partially downloaded file"
    flag off
option "overwrite"
    W "Overwrite existing file"
    flag off
option "no-extract"
    n "Do not actually extract video, simulate only"
    optional
option "limit-rate"
    l "Limit download speed to amount KB/s (0=unlimited)"
    int typestr="<amount>"
    default="0"
    optional
option "format"
    f "Download format of video"
    default="default"
    string typestr="<format_id>"
    optional
option "format-map"
    M "Specify format for multiple hosts in a string"
    string typestr="<map_string>"
    optional

section "Filename formatting"
option "number-videos"
    N "Prepend a numeric prefix to output filenames"
    flag off
option "regexp"
    r "Regular expression to cleanup video title"
    string typestr="<regexp>"
    default="/(\\w|\\s|\\pL)/g"
    optional
option "substitute"
    S "Replace matched occurences in filename, mimics Perl's s/old/new/(gi)"
    string typestr="<regexp>"
    optional
option "filename-format"
    F "Output filename format"
    string typestr="<format_string>"
    default="%h_%i.%s"
    optional

section "Subsequent"
option "exec"
    - "Command to invoke when transfer finishes"
    string typestr="<expr[;|+]>"
    optional
option "exec-run"
    e "Invoke command specified with --exec"
    dependon="exec"
    optional

section "Streaming"
option "stream-exec"
    - "Stream command to be invoked"
    string typestr="<expr>"
    optional
option "stream-pass"
    s "Pass video link to --stream-exec command"
    dependon="stream-exec"
    optional

text "\nSee the manual page for examples."
